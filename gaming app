const starTypes = [
  { type: "yellow" as const, label: "M Class", desc: "Main Sequence" },
  { type: "blue" as const, label: "B Class", desc: "Blue Giant" },
  { type: "orange" as const, label: "O Class", desc: "Red Dwarf" },
];

const CreateUniverse = () => {
  const [selectedStar, setSelectedStar] = useState<"yellow" | "blue" | "orange">("yellow");
  const [climate, setClimate] = useState([50]);
  const [habitability, setHabitability] = useState([70]);
  const [resources, setResources] = useState([40]);
  const { toast } = useToast();

  const handleCreate = () => {
    toast({
      title: "Universe Created!",
      description: `A new ${starTypes.find(s => s.type === selectedStar)?.label} system is forming...`,
    });
  };

  return (
    <div className="min-h-screen gradient-space pb-24">
      {/* Header */}
      <header className="px-6 pt-8 pb-4">
        <h1 className="text-2xl font-display font-bold glow-text-primary">
          Create Universe
        </h1>
        <p className="text-muted-foreground text-sm mt-1">Choose your central star</p>
      </header>

      {/* Star Preview */}
      <section className="px-4 animate-fade-up">
        <GlassCard className="flex items-center justify-center py-12">
          <Star type={selectedStar} size="lg" />
        </GlassCard>
      </section>

      {/* Star Type Selection */}
      <section className="px-4 mt-6 animate-fade-up" style={{ animationDelay: "0.1s" }}>
        <h2 className="text-lg font-display font-semibold mb-3">Star Type</h2>
        <div className="grid grid-cols-3 gap-3">
          {starTypes.map(({ type, label, desc }) => (
            <button
              key={type}
              onClick={() => setSelectedStar(type)}
              className={cn(
                "glass rounded-xl p-4 text-center transition-all duration-300",
                selectedStar === type 
                  ? "ring-2 ring-primary glow-primary" 
                  : "hover:bg-secondary/50"
              )}
            >
              <Star type={type} size="sm" className="mx-auto mb-2" />
              <p className="font-display font-semibold text-sm">{label}</p>
              <p className="text-xs text-muted-foreground">{desc}</p>
            </button>
          ))}
        </div>
      </section>

      {/* Sliders */}
      <section className="px-4 mt-6 space-y-5 animate-fade-up" style={{ animationDelay: "0.2s" }}>
        <GlassCard>
          <div className="flex justify-between items-center mb-3">
            <span className="text-sm font-medium">Climate Stability</span>
            <span className="text-sm font-display text-primary">{climate[0]}%</span>
          </div>
          <Slider
            value={climate}
            onValueChange={setClimate}
            max={100}
            step={1}
            variant="glow"
          />
        </GlassCard>

        <GlassCard>
          <div className="flex justify-between items-center mb-3">
            <span className="text-sm font-medium">Base Habitability</span>
            <span className="text-sm font-display text-primary">{habitability[0]}%</span>
          </div>
          <Slider
            value={habitability}
            onValueChange={setHabitability}
            max={100}
            step={1}
            variant="glow"
          />
        </GlassCard>
import { useState } from "react";
import { Navigation } from "@/components/Navigation";
