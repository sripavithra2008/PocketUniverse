const planetColors = [
  { color: "orange" as const, label: "Rocky" },
  { color: "teal" as const, label: "Oceanic" },
  { color: "purple" as const, label: "Gas Giant" },
  { color: "blue" as const, label: "Ice World" },
];

const DesignPlanet = () => {
  const [selectedColor, setSelectedColor] = useState<"orange" | "teal" | "purple" | "blue">("orange");
  const [temperature, setTemperature] = useState([50]);
  const [water, setWater] = useState([30]);
  const [terrain, setTerrain] = useState([60]);
  const [energy, setEnergy] = useState(42);
  const { toast } = useToast();

  const evolutionLogs = [
    "Single-cell organisms detected...",
    "Photosynthesis emerging on surface",
    "Complex life forms evolving",
  ];

  const handleDesign = () => {
    toast({
      title: "Planet Designed!",
      description: "Your custom world is taking shape...",
    });
  };

  return (
    <div className="min-h-screen gradient-space pb-24">
      {/* Header */}
      <header className="px-6 pt-8 pb-4">
        <h1 className="text-2xl font-display font-bold glow-text-primary">
          Design Planet
        </h1>
        <p className="text-muted-foreground text-sm mt-1">Craft your world</p>
      </header>

      {/* Planet Preview */}
      <section className="px-4 animate-fade-up">
        <GlassCard className="flex items-center justify-center py-8">
          <Planet size="xl" color={selectedColor} animated />
        </GlassCard>
      </section>

      {/* Planet Type Selection */}
      <section className="px-4 mt-6 animate-fade-up" style={{ animationDelay: "0.1s" }}>
        <h2 className="text-sm font-medium mb-3 text-muted-foreground">Planet Type</h2>
        <div className="flex gap-3 justify-center">
          {planetColors.map(({ color, label }) => (
            <button
              key={color}
              onClick={() => setSelectedColor(color)}
              className={cn(
                "flex flex-col items-center gap-2 p-3 rounded-xl transition-all duration-300",
                selectedColor === color 
                  ? "glass ring-2 ring-primary" 
                  : "hover:bg-secondary/30"
              )}
            >
              <Planet size="sm" color={color} />
              <span className="text-xs">{label}</span>
            </button>
          ))}
        </div>
      </section>

      {/* Environmental Sliders */}
      <section className="px-4 mt-6 space-y-4 animate-fade-up" style={{ animationDelay: "0.2s" }}>
        <GlassCard>
          <div className="flex items-center gap-3 mb-3">
            <Thermometer className="w-4 h-4 text-destructive" />
            <span className="text-sm font-medium flex-1">Temperature</span>
            <span className="text-sm font-display text-primary">{temperature[0]}Â°C</span>
          </div>
          <Slider
            value={temperature}
            onValueChange={setTemperature}
            min={-100}
            max={200}
            step={1}
            variant="glow"
          />
        </GlassCard>

        <GlassCard>
          <div className="flex items-center gap-3 mb-3">
            <Droplets className="w-4 h-4 text-planet-blue" />
            <span className="text-sm font-medium flex-1">Water Coverage</span>
            <span className="text-sm font-display text-primary">{water[0]}%</span>
          </div>
          <Slider
            value={water}
            onValueChange={setWater}
            max={100}
            step={1}
            variant="glow"
          />
        </GlassCard>

        <GlassCard>
          <div className="flex items-center gap-3 mb-3">
            <Mountain className="w-4 h-4 text-muted-foreground" />
            <span className="text-sm font-medium flex-1">Terrain Roughness</span>
            <span className="text-sm font-display text-primary">{terrain[0]}%</span>
          </div>
          <Slider
            value={terrain}
            onValueChange={setTerrain}
            max={100}
            step={1}
            variant="glow"
          />
        </GlassCard>
      </section>

      {/* Energy Progress */}
      <section className="px-4 mt-6 animate-fade-up" style={{ animationDelay: "0.25s" }}>
        <GlassCard>
          <div className="flex items-center gap-3 mb-3">
            <Zap className="w-4 h-4 text-accent" />
            <span className="text-sm font-medium flex-1">Evolution Energy</span>
            <span className="text-sm font-display text-accent">{energy}%</span>
          </div>
          <Progress value={energy} className="h-2" />
        </GlassCard>
      </section>

      {/* Evolution Log */}
      <section className="px-4 mt-6 animate-fade-up" style={{ animationDelay: "0.3s" }}>
        <GlassCard>
          <h3 className="text-sm font-medium mb-3 text-muted-foreground">Evolution Log</h3>
          <div className="space-y-2">
            {evolutionLogs.map((log, i) => (
              <p key={i} className="text-xs text-primary/80 font-mono">
                &gt; {log}
              </p>
            ))}
          </div>
        </GlassCard>
      </section>

      {/* Save Button */}
      <section className="px-4 mt-6 animate-fade-up" style={{ animationDelay: "0.35s" }}>
        <Button 
          onClick={handleDesign}
          className="w-full py-6 text-lg font-display font-semibold glow-primary"
        >
          Save Planet Design
        </Button>
      </section>

      <Navigation />
    </div>
  );
};

export default DesignPlanet;
