import { cn } from "@/lib/utils";
import { ReactNode } from "react";

interface GlassCardProps {
  children: ReactNode;
  className?: string;
}

export function GlassCard({ children, className }: GlassCardProps) {
  return (
    <div className={cn("glass rounded-2xl p-4", className)}>
      {children}
    </div>
  );
}
import { cn } from "@/lib/utils";
import { Home, Plus, Palette, History } from "lucide-react";
import { Link, useLocation } from "react-router-dom";

const navItems = [
  { icon: Home, label: "Home", path: "/" },
  { icon: Plus, label: "Create", path: "/create" },
  { icon: Palette, label: "Design", path: "/design" },
  { icon: History, label: "History", path: "/history" },
];

export function Navigation() {
  const location = useLocation();

  return (
    <nav className="fixed bottom-0 left-0 right-0 glass border-t border-border/50 px-4 py-3 z-50">
      <div className="flex justify-around items-center max-w-md mx-auto">
        {navItems.map(({ icon: Icon, label, path }) => {
          const isActive = location.pathname === path;
          return (
            <Link
              key={path}
              to={path}
              className={cn(
                "flex flex-col items-center gap-1 px-4 py-2 rounded-xl transition-all duration-300",
                isActive 
                  ? "text-primary glow-text-primary" 
                  : "text-muted-foreground hover:text-foreground"
              )}
            >
              <Icon className={cn("w-5 h-5", isActive && "drop-shadow-[0_0_8px_hsl(var(--primary))]")} />
              <span className="text-xs font-medium">{label}</span>
            </Link>
          );
        })}
      </div>
    </nav>
  );
}
import { cn } from "@/lib/utils";

interface PlanetProps {
  size?: "sm" | "md" | "lg" | "xl";
  color?: "orange" | "teal" | "purple" | "blue";
  className?: string;
  hasRings?: boolean;
  animated?: boolean;
}

const sizeClasses = {
  sm: "w-8 h-8",
  md: "w-12 h-12",
  lg: "w-20 h-20",
  xl: "w-32 h-32",
};

const colorClasses = {
  orange: "bg-gradient-to-br from-amber-400 via-orange-500 to-red-600",
  teal: "bg-gradient-to-br from-cyan-400 via-teal-500 to-emerald-600",
  purple: "bg-gradient-to-br from-violet-400 via-purple-500 to-indigo-600",
  blue: "bg-gradient-to-br from-sky-400 via-blue-500 to-indigo-600",
};

const glowClasses = {
  orange: "drop-shadow-[0_0_15px_rgba(251,146,60,0.6)]",
  teal: "drop-shadow-[0_0_15px_rgba(45,212,191,0.6)]",
  purple: "drop-shadow-[0_0_15px_rgba(167,139,250,0.6)]",
  blue: "drop-shadow-[0_0_15px_rgba(96,165,250,0.6)]",
};

export function Planet({ 
  size = "md", 
  color = "orange", 
  className,
  hasRings = false,
  animated = false 
}: PlanetProps) {
  return (
    <div className={cn("relative", animated && "animate-float", className)}>
      <div
        className={cn(
          "rounded-full relative overflow-hidden",
          sizeClasses[size],
          colorClasses[color],
          glowClasses[color]
        )}
      >
        {/* Surface detail */}
        <div className="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent" />
        <div className="absolute top-1/4 left-1/4 w-1/4 h-1/4 bg-white/10 rounded-full blur-sm" />
      </div>
      
      {hasRings && (
        <div 
          className={cn(
            "absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 border border-foreground/20 rounded-full",
            size === "sm" && "w-14 h-4",
            size === "md" && "w-20 h-6",
            size === "lg" && "w-32 h-10",
            size === "xl" && "w-52 h-16"
          )}
          style={{ transform: "translate(-50%, -50%) rotateX(70deg)" }}
        />
      )}
    </div>
  );
}
import { Star } from "./Star";
import { Planet } from "./Planet";

interface SolarSystemProps {
  starType?: "yellow" | "blue" | "orange";
}

export function SolarSystem({ starType = "yellow" }: SolarSystemProps) {
  return (
    <div className="relative w-full h-80 flex items-center justify-center">
      {/* Orbit rings */}
      <div className="absolute w-40 h-40 orbit-ring" />
      <div className="absolute w-64 h-64 orbit-ring" />
      <div className="absolute w-80 h-80 orbit-ring" />
      
      {/* Central Star */}
      <Star type={starType} size="md" />
      
      {/* Orbiting planets */}
      <div 
        className="absolute animate-orbit" 
        style={{ "--orbit-radius": "80px", "--orbit-duration": "12s" } as React.CSSProperties}
      >
        <Planet size="sm" color="teal" />
      </div>
      
      <div 
        className="absolute animate-orbit" 
        style={{ "--orbit-radius": "128px", "--orbit-duration": "20s" } as React.CSSProperties}
      >
        <Planet size="md" color="orange" />
      </div>
      
      <div 
        className="absolute animate-orbit" 
        style={{ "--orbit-radius": "160px", "--orbit-duration": "30s" } as React.CSSProperties}
      >
        <Planet size="sm" color="purple" hasRings />
      </div>
    </div>
  );
}
import { cn } from "@/lib/utils";

interface StarProps {
  size?: "sm" | "md" | "lg";
  type?: "yellow" | "blue" | "orange";
  className?: string;
}

const sizeClasses = {
  sm: "w-16 h-16",
  md: "w-24 h-24",
  lg: "w-32 h-32",
};

const colorClasses = {
  yellow: "bg-gradient-to-br from-yellow-200 via-yellow-400 to-orange-500",
  blue: "bg-gradient-to-br from-blue-200 via-blue-400 to-cyan-500",
  orange: "bg-gradient-to-br from-orange-300 via-orange-500 to-red-600",
};

const glowClasses = {
  yellow: "drop-shadow-[0_0_30px_rgba(250,204,21,0.8)] drop-shadow-[0_0_60px_rgba(250,204,21,0.4)]",
  blue: "drop-shadow-[0_0_30px_rgba(147,197,253,0.8)] drop-shadow-[0_0_60px_rgba(147,197,253,0.4)]",
  orange: "drop-shadow-[0_0_30px_rgba(251,146,60,0.8)] drop-shadow-[0_0_60px_rgba(251,146,60,0.4)]",
};

export function Star({ size = "md", type = "yellow", className }: StarProps) {
  return (
    <div
      className={cn(
        "rounded-full star-glow relative",
        sizeClasses[size],
        colorClasses[type],
        glowClasses[type],
        className
      )}
    >
      {/* Corona effect */}
      <div className="absolute inset-0 rounded-full bg-gradient-to-t from-transparent via-white/10 to-white/30" />
    </div>
  );
}
