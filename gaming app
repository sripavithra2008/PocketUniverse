      <section className="px-4 mt-2">
        <div className="relative">
          {/* Timeline line */}
          <div className="absolute left-6 top-0 bottom-0 w-px bg-gradient-to-b from-primary via-accent to-primary/20" />

          {/* Events */}
          <div className="space-y-4">
            {historyEvents.map((event, index) => {
              const Icon = event.icon;
              return (
                <div 
                  key={event.title} 
                  className="relative pl-14 animate-fade-up"
                  style={{ animationDelay: `${index * 0.05}s` }}
                >
                  {/* Icon circle */}
                  <div className={cn(
                    "absolute left-3 w-6 h-6 rounded-full glass flex items-center justify-center",
                    "ring-2 ring-border"
                  )}>
                    <Icon className={cn("w-3 h-3", event.color)} />
                  </div>

                  {/* Content card */}
                  <GlassCard className="relative">
                    <div className="flex items-start justify-between gap-3">
                      <div className="flex-1">
                        <h3 className="font-medium text-sm">{event.title}</h3>
                        <p className="text-xs text-muted-foreground mt-1">
                          {event.description}
                        </p>
                      </div>
                      <span className="text-xs font-display text-primary whitespace-nowrap">
                        {event.time}
                      </span>
                    </div>
                  </GlassCard>
                </div>
              );
            })}
          </div>
        </div>
      </section>

      {/* Summary */}
      <section className="px-4 mt-8 animate-fade-up" style={{ animationDelay: "0.5s" }}>
        <GlassCard className="text-center">
          <p className="text-2xl font-display font-bold text-primary mb-1">4.5 Billion</p>
          <p className="text-sm text-muted-foreground">Years of Evolution</p>
        </GlassCard>
      </section>

      <Navigation />
    </div>
  );
};

