import { GlassCard } from "@/components/GlassCard";
import { Navigation } from "@/components/Navigation";
import { Planet } from "@/components/Planet";
import { Sparkles, Zap, Globe } from "lucide-react";

const Index = () => {
  return (
    <div className="min-h-screen gradient-space pb-24">
      {/* Header */}
      <header className="px-6 pt-8 pb-4">
        <h1 className="text-2xl font-display font-bold glow-text-primary">
          Pocket Universe
        </h1>
        <p className="text-muted-foreground text-sm mt-1">Your cosmic sandbox</p>
      </header>

      {/* Solar System View */}
      <section className="px-4 animate-fade-up">
        <GlassCard className="overflow-hidden">
          <SolarSystem starType="yellow" />
        </GlassCard>
      </section>

      {/* Stats Cards */}
      <section className="px-4 mt-6 grid grid-cols-3 gap-3 animate-fade-up" style={{ animationDelay: "0.1s" }}>
        <GlassCard className="text-center">
          <Sparkles className="w-5 h-5 text-primary mx-auto mb-2" />
          <p className="text-xl font-display font-bold">3</p>
          <p className="text-xs text-muted-foreground">Planets</p>
        </GlassCard>
        
        <GlassCard className="text-center">
          <Zap className="w-5 h-5 text-accent mx-auto mb-2" />
          <p className="text-xl font-display font-bold">2.4B</p>
          <p className="text-xs text-muted-foreground">Years</p>
        </GlassCard>
        
        <GlassCard className="text-center">
          <Globe className="w-5 h-5 text-planet-teal mx-auto mb-2" />
          <p className="text-xl font-display font-bold">87%</p>
          <p className="text-xs text-muted-foreground">Habitable</p>
        </GlassCard>
      </section>

      {/* Recent Planets */}
      <section className="px-4 mt-6 animate-fade-up" style={{ animationDelay: "0.2s" }}>
        <h2 className="text-lg font-display font-semibold mb-3">Recent Planets</h2>
        <div className="space-y-3">
          {[
            { name: "Terra Nova", color: "teal" as const, type: "Earth-like", habitability: 92 },
            { name: "Pyralis", color: "orange" as const, type: "Volcanic", habitability: 24 },
            { name: "Crystalia", color: "purple" as const, type: "Ice Giant", habitability: 45 },
          ].map((planet, i) => (
            <GlassCard key={planet.name} className="flex items-center gap-4">
              <Planet size="md" color={planet.color} />
              <div className="flex-1">
                <h3 className="font-medium">{planet.name}</h3>
                <p className="text-sm text-muted-foreground">{planet.type}</p>
              </div>
              <div className="text-right">
                <p className="text-lg font-display font-bold text-primary">{planet.habitability}%</p>
                <p className="text-xs text-muted-foreground">Habitable</p>
              </div>
            </GlassCard>
          ))}
        </div>
      </section>

      <Navigation />
    </div>
  );
};

export default Index;
